#! /bin/bash

oco14 cluster up
oco14 new-app --docker-image=mongo
oco14 new-app . --strategy=docker \
                -e PROTOCOL=http \
                -e PORT=3000 \
                -e JWT_SECRET=somefoo


oco14 new-app --docker-image=localhost:5000/chatback \
                -e PROTOCOL=http \
                -e PORT=3000 \
                -e JWT_SECRET=somefoo


Oco14 expose service chatback
oco14 expose service mongo
